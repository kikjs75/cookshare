{
  "name": "cookshare",
  "version": "1.0.0",
  "private": true,
  "description": "CookShare — 레시피 공유 플랫폼 monorepo",
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "backend": "pnpm --filter cookshare-backend",
    "frontend": "pnpm --filter cookshare-frontend",
    "db:migrate": "pnpm --filter cookshare-backend db:migrate"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "typescript": "^5.4.2"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "packageManager": "pnpm@10.30.0",
  "pnpm": {
    "onlyBuiltDependencies": [
      "better-sqlite3",
      "esbuild",
      "unrs-resolver"
    ]
  }
}
